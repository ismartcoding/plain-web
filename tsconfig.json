{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable",
    ],
  },
  "plugins": [
    {
      "name": "ts-lit-plugin",
      "strict": true
    }
  ],
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}